name=xbinutils
revision=1
from_source=binutils
imagedeps="build-essential gcc"
hostdeps="automake autoconf"

configure() {
	${source_dir}/configure --target=x86_64-astral --prefix=${prefix} --with-sysroot=${sysroot_dir} --disable-werror
}

build() {
	make -j${parallelism}
}

package() {
	make install DESTDIR="${dest_dir}"
}
