name=nano
revision=1
from_source=nano
imagedeps="build-essential"
hostdeps="xgcc xbinutils pkgconfig libtool"
deps="base ncurses"

configure() {
	${source_dir}/configure --host=x86_64-astral --prefix=${prefix}
}

build() {
	make -j ${parallelism} LDFLAGS='-ltinfo'
}

package() {
	make install DESTDIR=${dest_dir}
}
