name=libffi
revision=1
from_source=libffi
imagedeps="build-essential"
hostdeps="xgcc xbinutils autoconf automake pkgconfig libtool"
deps="base ncurses"

configure() {
	${source_dir}/configure --host=x86_64-astral --prefix=${prefix} --disable-static --enable-shared
}

build() {
	make -j ${parallelism}
}

package() {
	make install DESTDIR=${dest_dir}
}
