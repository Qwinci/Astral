name=xtrans
revision=1
from_source=xtrans
imagedeps="meson ninja-build gcc"
hostdeps="xgcc xbinutils pkgconfig util-macros"
deps="base"

configure() {
	${source_dir}/configure --prefix=${prefix} --host=x86_64-astral 
}

build() {
	make -j${parallelism}
}

package() {
	DESTDIR=${dest_dir} make install
}
