name=diffutils
revision=1
from_source=diffutils
imagedeps="build-essential"
hostdeps="xgcc xbinutils"
deps="base"

configure() {
	cp -rp ${source_dir}/* .
	./configure --host=x86_64-astral --prefix=${prefix} --disable-docs
}

build() {
	make -j ${parallelism}
}

package() {
	make install DESTDIR=${dest_dir}
}
