name=coreutils
revision=1
from_source=coreutils
imagedeps="build-essential gperf"
hostdeps="xgcc xbinutils"
deps="base"

configure() {
	cp -pr ${source_dir}/* .
	CFLAGS="-DSLOW_BUT_NO_HACKS $CFLAGS" ./configure --host=x86_64-astral --prefix=${prefix}
}

build() {
	make -j ${parallelism}
}

package() {
	make install DESTDIR=${dest_dir}
}
