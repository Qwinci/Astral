name=twm
revision=1
from_source=twm
imagedeps="build-essential"
hostdeps="xgcc xbinutils pkgconfig"
deps="base xorg-server xsetroot"

configure() {
	${source_dir}/configure --prefix=${prefix} --host=x86_64-astral
}

build() {
	make -j${parallelism}
}

package() {
	make DESTDIR=${dest_dir} install
}
