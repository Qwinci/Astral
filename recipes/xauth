name=xauth
revision=1
from_source=xauth
imagedeps="build-essential"
hostdeps="xgcc xbinutils pkgconfig xorgproto"
deps="base libx11 libxaw libxext libxmu"

configure() {
	${source_dir}/configure --prefix=${prefix} --host=x86_64-astral
}

build() {
	make -j${parallelism}
}

package() {
	make DESTDIR=${dest_dir} install
}
