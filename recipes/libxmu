name=libxmu
revision=1
from_source=libxmu
imagedeps="meson ninja-build build-essential"
hostdeps="xgcc xbinutils pkgconfig"
deps="base libx11 libxt libxext"

configure() {
	${source_dir}/configure --prefix=${prefix} --host=x86_64-astral --enable-shared --disable-static
}

build() {
	make -j${parallelism}
}

package() {
	make DESTDIR=${dest_dir} install
}
