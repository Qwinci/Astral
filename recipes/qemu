name=qemu
revision=1
from_source=qemu
imagedeps="build-essential python3-venv python3-sphinx ninja-build meson git"
hostdeps="xgcc xbinutils pkgconfig libtool"
deps="base sdl2 glib libiconv libintl"
allow_network="yes"

configure() {
	cp -rp ${source_dir}/* .
	./configure --cross-prefix=x86_64-astral- --host=x86_64-astral --prefix=${prefix} --target-list=x86_64-softmmu,i386-softmmu,aarch64-softmmu --with-coroutine=sigaltstack --disable-pie
}

build() {
	cd build
	ninja -j${parallelism}
}

package() {
	cd build
	DESTDIR=${dest_dir} ninja install
}
