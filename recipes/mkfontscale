name=mkfontscale
revision=1
from_source=mkfontscale
imagedeps="gcc"
hostdeps="xgcc xbinutils pkgconfig"
deps="base freetype libfontenc"

configure() {
	${source_dir}/configure --prefix=${prefix} --host=x86_64-astral
}

build() {
	make -j${parallelism}
}

package() {
	make install DESTDIR=${dest_dir}
}
