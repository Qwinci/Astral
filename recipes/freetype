name=freetype
revision=1
from_source=freetype
imagedeps="gcc build-essential"
hostdeps="xgcc xbinutils pkgconfig"
deps="base"

configure() {
	${source_dir}/configure --prefix=${prefix} --host=x86_64-astral --enable-shared --disable-static
}

build() {
	make -j${parallelism}
}

package() {
	make install DESTDIR=${dest_dir}
}
