name=libxrender
revision=1
from_source=libxrender
imagedeps="meson ninja-build build-essential"
hostdeps="xgcc xbinutils pkgconfig"
deps="base libx11"

configure() {
	${source_dir}/configure --prefix=${prefix} --host=x86_64-astral --enable-shared --disable-static --disable-malloc0returnsnull
}

build() {
	make -j${parallelism}
}

package() {
	make DESTDIR=${dest_dir} install
}
