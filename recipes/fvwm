name=fvwm
revision=1
from_source=fvwm
imagedeps="build-essential"
hostdeps="xgcc xbinutils pkgconfig libtool"
deps="base libx11 libxinerama libxcursor libxt libevent libxrandr freetype libpng libxft"

configure() {
	cp -rvp ${source_dir}/* .
	ac_cv_func_setpgrp_void=yes \
	ac_cv_func_mkstemp=yes \
	has_safety_mkstemp=yes \
	./configure --prefix=${prefix} --host=x86_64-astral
}

build() {
	 make -j${parallelism} libevent_LIBS="-levent"
}

package() {
	make DESTDIR=${dest_dir} install
}
